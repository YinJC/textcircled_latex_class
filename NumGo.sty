    \ifdim\wd\@tempboxa>\@tempdima
        \savebox{\@tempboxa}{\resizebox{\@tempdima}{\height}{#3}}%
    \fi%
    \tikz[
        baseline,
        every node/.style={%
            outer sep=0pt,
            inner sep=0pt,
            fill=#1,
            text=#2,
            draw,
            circle
        }
    ]{%
        \node[draw=#1] at (0,\@tempdimb/2) (circle) {\phantom{88}};
        \node[anchor=center] at (0,\@tempdimb/2) {\box\@tempboxa};
    }%
}

